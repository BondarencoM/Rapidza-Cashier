<Window x:Class="RapidzaCashier.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RapidzaCashier"
        mc:Ignorable="d"
        Title="Rapidza: Cashier" Height="450" Width="800"
        Loaded="Window_Loaded">
    <StackPanel Margin="15 0">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Column="1" Text="Order view"
                       FontSize="30" HorizontalAlignment="Center" />
        </Grid>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="6*" />
                <ColumnDefinition Width="20" />
                <ColumnDefinition Width="4*" />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0">
                <Grid Height="300" Background="#eee" >
                    <TextBlock  FontSize="25" VerticalAlignment="Center" HorizontalAlignment="Center">
                        Add here: <LineBreak/> pizza selection
                    </TextBlock>
                </Grid>
                <Grid Margin="0 10">
                    <Grid.ColumnDefinitions >
                        <ColumnDefinition Width="10*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="3*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="20"/>
                        <ColumnDefinition Width="4*"/>
                    </Grid.ColumnDefinitions>
                    <TextBox Grid.Column="0" />
                    <Button Grid.Column="2" Content="+" />
                    <TextBox Grid.Column="3" />
                    <Button Grid.Column="4" Content="-" />

                    <Button Grid.Column="7" Content="Add" Margin="10 0 0 0" />

                </Grid>
            </StackPanel>
            <StackPanel Grid.Column="2">
                <Border BorderBrush="Black" BorderThickness="1" Padding="5 7">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="8*"/>
                            <ColumnDefinition Width="2*"/>
                        </Grid.ColumnDefinitions>
                        <TextBlock Text="Table number" />
                        <TextBox Grid.Column="1" />
                    </Grid> 
                </Border>
                <Grid Height="200" Background="#eee">
                    <TextBlock  FontSize="25" VerticalAlignment="Center" HorizontalAlignment="Center">
                        Add here: <LineBreak/> Ordered items list
                    </TextBlock>
                </Grid>
                <Grid  Margin="3 7">
                    <Button HorizontalAlignment="Right" Content="Submit" FontSize="20" Padding="7 3" />
                </Grid>
                <Grid >
                    <TextBlock Text="Total price: " FontSize="25" />
                    <TextBlock Text="24.5€" FontSize="25" HorizontalAlignment="Right" />
                </Grid>
            </StackPanel>
        </Grid>
    </StackPanel>
</Window>
